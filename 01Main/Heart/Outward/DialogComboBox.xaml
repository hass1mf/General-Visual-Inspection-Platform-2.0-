<Window x:Class="Heart.Outward.DialogComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Heart.Outward"
             mc:Ignorable="d" 
             Height="125" Width="250">
    <Grid>
        <ComboBox Name="_comboBox" Height="30" Margin="10,15,10,0" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" FontSize="14"/>
        <Button Name="_buttonSave" Content="确定" Margin="0,5,135,3" Width="80" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Bottom" VerticalContentAlignment="Center" Click="_buttonSave_Click" />
        <Button Name="_buttonCancel" Content="取消" Margin="0,5,25,3" Width="80" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Bottom" VerticalContentAlignment="Center" Click="_buttonCancel_Click" />
    </Grid>
</Window>
